style "back"
{
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			shadow=NONE
			state = NORMAL
			file="wave.svg"
			stretch=TRUE
			detail = "base"
		}
	}
}

style "time"
{
	fg[NORMAL]="#cccccc"
	font_name="FreeSans Regular 11"
}

style "prompt"
{
	fg[NORMAL]="#eeeeee"
	font_name="FreeSans Regular 14"
}

style "passwd"
{
	font_name = "FreeSans Regular 18"
}

style "font_base"
{
	font_name = "FreeSans Regular 11"
}


# Normally this won't paint an invisible event box, but we did some hacks in greeter.c.
style "bottom"
{
	font_name="FreeSans Regular 11"
	#fg[NORMAL] = "#9E9D9B"
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			file="shade.png"
			stretch=TRUE
			detail="eventbox"
		}
	}
}

widget_class "GtkWindow.*" style "font_base"
widget "lxdm" style "back"
widget "lxdm.*.time" style "time"
widget "*.prompt" style "prompt"
widget "lxdm.*.login_entry" style "passwd"
widget "lxdm.*.bottom_pane" style "bottom"
widget_class "GtkWindow.*.GtkEventBox.*.<GtkLabel>" style "bottom"
